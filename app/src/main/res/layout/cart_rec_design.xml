<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="3dp"
        app:cardCornerRadius="10dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">


            <ImageView
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:src="@drawable/toordal"
                android:id="@+id/imageItem"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dell Laptop"
                android:layout_toEndOf="@+id/imageItem"
                android:id="@+id/tvProductName"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="@font/alata"
                android:textColor="@color/colorAccent"
                android:textAllCaps="true"
                android:maxLines="1"
                android:textStyle="bold"
                android:layout_marginStart="2dp"
                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\u20B9 10000 X 5"
                android:textSize="12sp"
                android:textColor="#000"
                android:fontFamily="@font/alata"
                android:id="@+id/tvPriceQty"
                android:layout_below="@+id/tvProductName"
                android:layout_toEndOf="@+id/imageItem"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="2dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\u20B9 50000"
                android:textSize="14sp"
                android:fontFamily="@font/alata"
                android:textColor="@color/color_site"
                android:id="@+id/tvTotalPrice"
                android:layout_below="@+id/tvPriceQty"
                android:layout_toEndOf="@+id/imageItem"
                android:layout_marginStart="2dp"
                android:layout_marginTop="3dp"
               />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:src="@drawable/close2"
                android:id="@+id/ivRemoveProduct"
                android:layout_alignParentEnd="true"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvPriceQty"
                android:id="@+id/relativeQty"
                android:layout_marginEnd="10dp"
                >


                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_plus2"
                    android:id="@+id/ivPlus"
                    android:layout_alignParentEnd="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/ivPlus"
                    android:fontFamily="@font/alata"
                    android:text="1"
                    android:textSize="14sp"
                    android:id="@+id/tvQty"/>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_minus2"
                    android:id="@+id/ivminus"
                    android:layout_toStartOf="@+id/tvQty"/>

            </RelativeLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>